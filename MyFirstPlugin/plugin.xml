<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin
	name="Eclipse Hello World Example"
	id="org.eclipse.examples.helloworld"
	version="0.0.0"
	provider-name="OTI">
	
    <requires>
	<import plugin="org.eclipse.core.resources"/>
        <import plugin="org.eclipse.ui"/>
    </requires>

    <runtime>
	<library name="helloworld.jar"/>
    </runtime>
	
    <extension point = "org.eclipse.ui.actionSets">
        <actionSet
            id="org.eclipse.examples.helloworld.HelloWorldActionSet"
            label="Hello World"
	    visible="true"
	    description="The action set for the Eclipse Hello World example">
	    <menu
		id="org.eclipse.examples.helloworld.HelloWorldMenu"
		label="Hello">
		<separator name="samples"/>
	    </menu>
	    <action id="com.sonarsource.testplugin.HelloWorldAction"
		menubarPath="org.eclipse.examples.helloworld.HelloWorldMenu/hello"
		toolbarPath="Normal"			
		label="Hello World"
		tooltip="Press to see a message"
		icon="icons/home.png"
		class="com.sonarsource.myfirstplugin.HelloWorldAction"/>
        </actionSet>
    </extension>
</plugin>
